<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="bcrStyleLabelTitulo">
        <item name="android:textColor">@color/primaryTextColor </item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">35dp </item>
        <item name="android:layout_gravity">center|top</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="bcrStyleLabelNormal">
        <item name="android:textColor">@color/secondaryTextColor </item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17dp </item>
        <item name="android:layout_gravity">left</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@color/secondaryColor</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="bcrStyleEditText">
        <item name="android:textColor">@color/primaryTextColor </item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17dp </item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="bcrStyleButton">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp </item>
        <item name="android:backgroundTint">@color/secondaryColor</item>
        <item name="android:textAllCaps">false </item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>
    </style>

    <style name="bcrStyleFragment">
        <item name="android:background">@color/primaryColor</item>
    </style>

</resources>