<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".registroActivity"
    android:padding="15dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro de usuario"
        android:textSize="40dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textFontWeight="800"
        android:textColor="@color/secondaryColor"
        android:gravity="center"
        ></TextView>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombres"
        android:textSize="20dp"
        android:textColor="@color/secondaryDarkColor"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        ></TextView>

    <EditText
        android:id="@+id/edtRegNom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:inputType="text"
        android:hint="Ingrese sus nombres"
        android:textColorHint="@color/white"
        ></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellidos"
        android:textSize="20dp"
        android:textColor="@color/secondaryDarkColor"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        ></TextView>

    <EditText
        android:id="@+id/edtRegApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:inputType="text"
        android:hint="Ingrese sus apellidos"
        android:textColorHint="@color/white"
        ></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teléfono"
        android:textSize="20dp"
        android:textColor="@color/secondaryDarkColor"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        ></TextView>

    <EditText
        android:id="@+id/edtRegTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:inputType="number"
        android:hint="Ingrese su numero de teléfono"
        android:textColorHint="@color/white"
        ></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo Electrónico"
        android:textSize="20dp"
        android:textColor="@color/secondaryDarkColor"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        ></TextView>

    <EditText
        android:id="@+id/edtRegCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:inputType="textEmailAddress"
        android:hint="Ingrese su correo electrónico"
        android:textColorHint="@color/white"
        ></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:textSize="20dp"
        android:textColor="@color/secondaryDarkColor"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="20dp"
        ></TextView>

    <EditText
        android:id="@+id/edtRegPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:hint="Ingrese su contraseña"
        android:textColorHint="@color/white"
        ></EditText>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_marginRight="5dp"
            android:id="@+id/btnRegReg"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:textColor="@color/primaryColor"
            android:background="@drawable/button_rounded"
            android:backgroundTint="@color/secondaryDarkColor"
            android:layout_width="0dp"
            ></Button>

        <Button
            android:layout_marginLeft="5dp"
            android:id="@+id/btnCancelarReg"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="@color/secondaryColor"
            android:background="@drawable/button_rounded_border"
            android:layout_width="0dp"
            ></Button>
    </LinearLayout>

</LinearLayout></ScrollView>