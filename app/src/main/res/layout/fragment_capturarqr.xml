<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.capturaqr.capturarqr"
    style="@style/bcrStyleFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:text="@string/menu_capturarqr"
        style="@style/bcrStyleLabelTitulo"
        ></TextView>

    <TextView
        android:text="Nombre *"
        style="@style/bcrStyleLabelNormal"
        ></TextView>

    <EditText
        android:id="@+id/edtnombre"
        style="@style/bcrStyleEditText"></EditText>

    <TextView
        android:text="DNI *"
        style="@style/bcrStyleLabelNormal"
        ></TextView>

    <EditText
        android:id="@+id/edtdni"
        style="@style/bcrStyleEditText"></EditText>

    <TextView
        android:text="Fecha *"
        style="@style/bcrStyleLabelNormal"
        ></TextView>

    <TextView
        android:id="@+id/edtfecha"
        style="@style/bcrStyleEditText"
        android:inputType="date"
        ></TextView>

    <TextView
        android:text="Hora *"
        style="@style/bcrStyleLabelNormal"
        ></TextView>

    <EditText
        android:id="@+id/edthora"
        style="@style/bcrStyleEditText"></EditText>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Cantidad NiÃ±os *"
                style="@style/bcrStyleLabelNormal"
                ></TextView>

            <Spinner
                android:id="@+id/edtdninos"
                style="@style/bcrStyleEditText"></Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Cantidad Adultos *"
                style="@style/bcrStyleLabelNormal"
                ></TextView>

            <Spinner
                android:id="@+id/edtdadultos"
                style="@style/bcrStyleEditText"></Spinner>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>